<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
    <LinearLayout
            android:id="@+id/mine_code_dailog_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/public_edit_bg"
            android:orientation="vertical"
            >
        <TextView
                android:gravity="center"
                android:id="@+id/tv_title"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/y25"
                android:text="是否结束当前会议"
                />

        <View
                android:layout_width="wrap_content"
                android:layout_height="2px"
                android:layout_marginTop="@dimen/y15"
                android:background="@color/gray_e0"
                />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <TextView
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/tv_negative"
                    android:textColor="@color/gray_c0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/y10"
                    android:text="取消"
                    />
            <TextView
                    android:gravity="center"
                    android:background="@color/gray_c0"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    />

            <TextView
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="@color/interest_queding"
                    android:id="@+id/tv_positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/y10"
                    android:text="确定"
                    />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>